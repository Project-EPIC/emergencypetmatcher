
<VirtualHost *:8080>
	# Basic setup
	ServerAdmin jbarron@barronsoftware.com
	ServerName www.barronsoftware.com
	ServerAlias barronsoftware.com
	
    <Directory /home/jbarron/public_html/barronsoftware.com/nplh/apache/>
		Order deny,allow
		Allow from all
	</Directory>

	LogLevel warn
	ErrorLog /home/jbarron/public_html/barronsoftware.com/logs/apache_error.log
	CustomLog /home/jbarron/public_html/barronsoftware.com/logs/apache_access.log combined
	
	WSGIDaemonProcess barronsoftware.com user=www-data group=www-data threads=25
	WSGIProcessGroup barronsoftware.com

    WSGIScriptAlias /nplh /home/jbarron/public_html/barronsoftware.com/nplh/apache/nplh.wsgi
</VirtualHost>
